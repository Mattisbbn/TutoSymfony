{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes{% endblock %}

{% block body %}

<div class="container mt-4">
    <h1>Toutes les recettes</h1>
    <a class="btn btn-primary btn-sm" href="{{ path('recipe.create')}}">Cr√©er une recette</a>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
       {% for recipe in recipes %}
            <tr>
                <td><a href="{{ path('recipe.show', {'id': recipe.id,"slug" : recipe.slug})  }}">{{ recipe.title }}</a></td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('recipe.edit', {'id': recipe.id})  }}">Editer</a>
             
                    <form class="d-inline" method="post" action="{{ path('recipe.delete', {'id': recipe.id}) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-sm" type="submit">Supprimer</button>
                    </form>
                
                </td>
            
            </tr>

    
   
        {% endfor %}    
    </tbody>
</div>
{% endblock %}
